{
    "name": "aternos/serializer",
    "description": "A PHP library for (de-)serialization using attributes and reflection",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Julian Vennen",
            "email": "julian@aternos.org"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11"
    },
    "autoload": {
        "psr-4": {
            "Aternos\\Serializer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aternos\\Serializer\\Test\\Src\\": "tests/src",
            "Aternos\\Serializer\\Test\\Tests\\": "tests/tests"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml --testdox"
    }
}
